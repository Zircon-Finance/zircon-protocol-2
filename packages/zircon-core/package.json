{
  "name": "@zircon/core",
  "version": "1.0.0",
  "description": "Core Contracts",
  "engines": {
    "node": ">=10"
  },
  "homepage": "https://zircon.finance",
  "repository": {
    "directory": "",
    "type": "git",
    "url": "https://github.com/Zircon-Finance/zircon-protocol"
  },
  "files": [
    "artifacts",
    "contracts"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.19.0",
    "chai": "*",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.8",
    "hardhat-abi-exporter": "https://github.com/VittoriDavide/hardhat-abi-exporter",
    "hardhat-contract-sizer": "^2.3.0",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "*"
  },
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "2.5.0",
    "@uniswap/lib": "^4.0.1-alpha",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^1.2.1",
    "dotenv": "^10.0.0",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-watcher": "^2.1.1",
    "node-fetch": "^3.3.0",
    "solidity-docgen": "^0.6.0-beta.10"
  },
  "scripts": {
    "deploy:moonbase": "npx hardhat --network moonbase deploy --reset --export-all ../zircon-periphery/external_contracts/core_contracts.json",
    "deploy:moonriver": "npx hardhat --network  moonriver deploy --reset --export-all ../zircon-periphery/external_contracts/core_contracts.json",
    "deploy:bsc": "npx hardhat --network bsc deploy --reset --export-all ../zircon-periphery/external_contracts/core_contracts.json",
    "test": "npx hardhat test",
    "compile": "npx hardhat compile --show-stack-traces",
    "ctest": "npx hardhat compile && npm test",
    "bytecode": "npx hardhat run scripts/get-bytecodes.js",
    "check:bsc": "npx hardhat run --network bsc scripts/add-pair.js",
    "testCreate:moonbase": "npx hardhat run --network moonbase scripts/creating-test.js",
    "migrate:moonbase": "npx hardhat --network moonbase run scripts/migrate.js",
    "migrate:moonriver": "npx hardhat --network moonriver run scripts/migrate.js",
    "pause:moonriver": "npx hardhat --network moonriver run scripts/pause.js",
    "help:moonriver": "npx hardhat --network moonriver run scripts/help.js",
    "help:moonbase": "npx hardhat --network moonbase run scripts/help.js",
    "chMigrator:moonriver": "npx hardhat --network moonriver run scripts/change-migrator.js",
    "createTest:moonbase": "npx hardhat --network moonbase run scripts/creating-test.js"
  }
}
